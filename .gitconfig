[alias]
    a = add
    aa = add -A
    b = branch
    ba = branch -a
    c = commit -m
    ca = commit -am
    co = checkout
    d = diff --patch-with-stat
    df = diff --patch-with-stat --color-words
    ds = diff --patch-with-stat --staged
    lg = log --graph --pretty='%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset'
    s = status -sb
    sclone = clone --depth 1
    undo = reset HEAD~1
    # Show the diff between the latest commit and the current state.
	dd = !"git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat"
    # `git di $number` shows the diff between the state `$number` revisions ago and the current state.
	di = !"d() { git diff --patch-with-stat HEAD~$1; }; git diff-index --quiet HEAD -- || clear; d"

[user]
    email = hantaotaohan@gmail.com 
    name = hantaotaohan

[core]
    editor = vim
    autocrlf = false
    pager = diff-so-fancy | less --tabs=4 -RFX

[merge]
    tool = vimdiff
    
[http]
    sslVerify = false

[color]
    ui = always
    diff = always

[color "diff"]
    meta = 11 bold
    commit = cyan bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = 0 bold 1
    newNormal = green bold
    newHighlight = 0 bold 2

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "status"]
    added = green
    changed = yellow
    untracked = red

[pager]
    diff = diff-so-fancy | less --tabs=4 -RFX
    show = diff-so-fancy | less --tabs=4 -RFX
    
[diff-so-fancy]
    stripLeadingSymbols = false
    changeHunkIndicators = true
    markEmptyLines = true
    useUnicodeRuler = true
