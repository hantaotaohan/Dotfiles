# Navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~='cd ~'
alias -- -="cd -"
alias cd=my_cd_func

# z.lua
alias zh='z -I -t .' # 使用 fzf 选择最近去过的目录
alias zc='z -c'      # 严格匹配当前路径的子路径
alias zz='z -i'      # 使用交互式选择模式
alias zf='z -I'      # 使用 fzf 对多个结果进行选择
alias zb='z -b'      # 快速回到父目录

# some more ls aliases
alias ll='ls -alhovqF --color=always --group-directories-first'
alias la='ls -A'
alias l='ls -CF'
alias lk='ls -AlXHLF --color=always'

alias c='cd "$(ls  -dx -- */ .*/ | yank-cli -i)"'

# BookMarks
alias dt='cd ~/desktop && ls -lhA'
alias ws='cd ~/workspace && ls -lhA'
alias dl='cd ~/downloads && ls -lhA'
alias ds='cd ~/dotfiles && ls -lhA'
alias cf='cd ~/.config && ls -lhA'

# Easy report
alias ls='ls -Fh --color=auto --group-directories-first'
alias lsd="ls -lF --color=auto | grep --color=never '^d'"
alias grep='grep --color=auto'
alias l='ls -l'
alias la='ls -lA'
alias fdir='find . -type d -name'
alias ff='find . -type f -name'
alias h='history'
alias cp='cp -iv'
alias mv='mv -iv'
alias ln='ln -iv'
alias mkdir='mkdir -v'
alias rm='rm -i'
alias rmf='rm -rf'

# Tmux
alias tm='test -z "$TMUX" && (tmux attach || tmux new-session -s "TaoTao")'

# Shortcuts
alias cl='clear'
alias cat='bat'
alias e='exit'

# Developer shortcuts
alias g='git'
alias python='python3'

# Yank clip
alias yank='yank-cli | xclip -sel c'

# Google-Chrome
alias chrome="google-chrome --force-dark-mode --proxy-server=socks5://127.0.0.1:1080"

# Other
alias sai='sudo apt install'
alias mail='neomutt'
alias rss='newsboat'
alias file='nautilus .'

